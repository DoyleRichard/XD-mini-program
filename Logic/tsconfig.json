{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"outDir": "./dist/",
		"noImplicitAny": true,
		"module": "es6",
		"target": "es5",
		"allowJs": true,
		"moduleResolution": "node",
		"baseUrl": "./",
		"paths": {
			"@logic/*": ["./src/*"]
		}
	},
	"ts-node": {
		"compilerOptions": {
			"module": "CommonJS"
		}
	}
}
